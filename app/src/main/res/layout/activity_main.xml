<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amb01.mydentaku10180416.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:columnCount="4"
        android:rowCount="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/my_main_activity_calculation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="0"
            android:textColor="#fff"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/my_main_activity_calc_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:layout_gravity="right"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:text="0"
            android:textSize="38dp" />

        <Button
            android:id="@+id/my_main_activity_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="1" />

        <Button
            android:id="@+id/my_main_activity_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="2" />

        <Button
            android:id="@+id/my_main_activity_button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="3" />

        <Button
            android:id="@+id/my_main_activity_button_devine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="รท" />

        <Button
            android:id="@+id/my_main_activity_button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="4" />

        <Button
            android:id="@+id/my_main_activity_button_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="5" />

        <Button
            android:id="@+id/my_main_activity_button_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="6" />

        <Button
            android:id="@+id/my_main_activity_button_kakeru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="ร" />

        <Button
            android:id="@+id/my_main_activity_button_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="7" />

        <Button
            android:id="@+id/my_main_activity_button_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="8" />

        <Button
            android:id="@+id/my_main_activity_button_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="9" />

        <Button
            android:id="@+id/my_main_activity_button_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="-" />

        <Button
            android:id="@+id/my_main_activity_button_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="0" />

        <Button
            android:id="@+id/my_main_activity_button_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="@string/delete" />

        <Button
            android:id="@+id/my_main_activity_button_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="+" />

        <Button
            android:id="@+id/my_main_activity_button_calc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:layout_rowWeight="1"
            style="@style/CalcButton"
            android:text="=" />

    </GridLayout>


</android.support.constraint.ConstraintLayout>
